<!-- app/views/customers/show.html.erb -->
<div class="row">
  <div class="col-12">
    <div class="mb-4">
      <%= link_to "â† Back to Customers", customers_path, class: "btn btn-outline-dark rounded-pill" %>
    </div>

    <div class="card shadow-lg rounded-4 border-0">
      <div class="card-header bg-dark text-white py-3">
        <h3 class="mb-0">Customer Details</h3>
      </div>

      <div class="card-body p-4">
        <div class="row">
          <div class="col-md-6 mb-3">
            <label class="text-muted small mb-1">ID</label>
            <p class="fw-bold fs-5">#<%= @customer.id %></p>
          </div>

          <div class="col-md-6 mb-3">
            <label class="text-muted small mb-1">Created At</label>

            <p class="fw-bold fs-5">
              <%= @customer.created_at.strftime("%d/%m/%Y %H:%M") %>
            </p>
          </div>
        </div>

        <hr class="my-4">

        <div class="row">
          <div class="col-md-6 mb-3">
            <label class="text-muted small mb-1">Name</label>
            <p class="fw-bold fs-5"><%= @customer.name %></p>
          </div>

          <div class="col-md-6 mb-3">
            <label class="text-muted small mb-1">Email</label>
            <p class="fw-bold fs-5"><%= @customer.email %></p>
          </div>
        </div>

        <div class="row">
          <div class="col-md-6 mb-3">
            <label class="text-muted small mb-1">Phone</label>
            <p class="fw-bold fs-5"><%= @customer.phone %></p>
          </div>

          <div class="col-md-6 mb-3">
            <label class="text-muted small mb-1">Product Code</label>

            <p>
              <span class="badge bg-primary fs-6 px-3 py-2">
                <%= @customer.product_code %>
              </span>
            </p>
          </div>
        </div>

        <div class="row">
          <div class="col-12 mb-3">
            <label class="text-muted small mb-1">Subject</label>
            <p class="fw-bold fs-5"><%= @customer.subject %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
