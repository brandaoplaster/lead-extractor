<div class="row">
  <div class="col-12">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1 class="fw-bold">Customers</h1>

      <span class="badge bg-dark fs-5 px-4 py-2 rounded-pill">
        <%= @customers.count %> Total
      </span>
    </div>

    <div class="card shadow-lg rounded-4 border-0">
      <div class="card-body p-0">
        <% if @customers.empty? %>
          <div class="text-center py-5">
            <h4 class="text-muted">No customers found</h4>
          </div>
        <% else %>
          <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
              <thead class="table-dark">
                <tr>
                  <th class="py-3 ps-4">#</th>
                  <th class="py-3">Name</th>
                  <th class="py-3">Email</th>
                  <th class="py-3">Date</th>
                  <th class="py-3 pe-4 text-center">Actions</th>
                </tr>
              </thead>

              <tbody>
                <% @customers.each do |customer| %>
                  <tr class="border-bottom">
                    <td class="ps-4 fw-bold text-muted">#<%= customer.id %></td>
                    <td class="fw-semibold"><%= customer.name %></td>
                    <td class="text-muted"><%= customer.email %></td>

                    <td class="text-muted small">
                      <%= customer.created_at.strftime("%d/%m/%Y %H:%M") %>
                    </td>

                    <td class="pe-4 text-center">
                      <%= link_to "View", customer_path(customer), class: "btn btn-sm btn-dark rounded-pill px-4" %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
